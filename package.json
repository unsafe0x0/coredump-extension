{
  "name": "bashforge",
  "displayName": "BashForge",
  "description": "Tracks coding activity by language and duration.",
  "version": "1.0.4",
  "publisher": "unsafezero",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:bashForge.inputPrivateKey"
  ],
  "main": "./out/extension.js",
  "icon": "assets/logo.png",
  "contributes": {
    "commands": [
      {
        "command": "bashForge.inputPrivateKey",
        "title": "Input BashForge Private Key"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "BashForge Configuration",
      "properties": {
        "bashForge.privateKey": {
          "type": "string",
          "default": "",
          "description": "The private key used to authenticate with the BashForge server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/mocha": "^10.0.10",
    "@types/node": "~20.17.47",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.27.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "axios": "^1.9.0"
  }
}
